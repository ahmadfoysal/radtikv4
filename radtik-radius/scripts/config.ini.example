# RadTik FreeRADIUS Synchronization Configuration
# Copy this file to config.ini and update with your settings

[api]
# API Server Configuration (Flask API for receiving sync requests from Laravel)
# Host to bind to (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
host = 0.0.0.0

# Port to listen on
port = 5000

# Authentication token for incoming requests from Laravel
# IMPORTANT: Change this to a secure random token!
# This should match the 'auth_token' field in RadiusServer model in Laravel
auth_token = your-secure-token-here

# Enable debug mode (DO NOT use in production!)
debug = false

[laravel]
# Laravel API base URL (without trailing slash)
# The script will append the endpoint path
api_url = https://radtik.com

# API secret token for authentication
# This should match the token configured in Laravel for this RADIUS server
api_secret = your-radius-server-api-token-here

[radius]
# Path to FreeRADIUS SQLite database
db_path = /var/lib/freeradius/radius.db

[sync]
# Sync intervals (for reference, actual scheduling in cron)
voucher_sync_minutes = 2
activation_check_minutes = 1
deleted_sync_minutes = 5
